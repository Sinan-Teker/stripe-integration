<h1>Alınan Ürün Sepeti</h1>
    <% @cart.each do |product| %>
        <tr>
          <th><%= product.name %></th>
          <span>---</span>
          <th><%= product.price%><span> TRY</span></th>
        </tr>
      <br>
    <% end %>
    <% if @cart.present? %>
      <%= button_to "Satın Al", buy_path, remote: request.xhr?, data: { disable_with: "Bekleyin..." } %>
    <% end %>
<hr>
<h1>Ürünler</h1>

<table>
  <thead>
    <tr>
      <th>İsim</th>
      <th>Fiyat</th>
      <th>Sepete Ekle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %><span> TRY</span></td>
        <td>
          <% if @cart.include?(product) %>
            <%= button_to "Sepetten Kaldır", remove_from_cart_path(product), method: :delete %>
          <% else %>
            <%= button_to "Sepete Ekle", add_to_cart_path(product) %>
          <% end %>
        </td>
        <td><%= link_to 'Göster', product %></td>
        <td><%= link_to 'Düzenle', edit_product_path(product) %></td>
        <td><%= link_to 'Sil', product, method: :delete, data: { confirm: 'Ürünü silmek istediğinizden emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni Ürün', new_product_path %>
